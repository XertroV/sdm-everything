{
  "compilerOptions": {
    "newLine": "LF",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["DOM", "ES2016"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "index.ts",
    "commands/**/*.ts",
    "events/**/*.ts",
    "goals/**/*.ts",
    "tests/**/*.ts",
    "bin/*.ts",
    "lib/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [".#*"],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
